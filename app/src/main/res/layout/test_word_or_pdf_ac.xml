<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/urlEdt"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@id/openUrlBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openUrlBtn"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/yc_blue"
        android:text="打开url"
        android:textColor="@color/white"
        app:backgroundTint="@color/yc_blue"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@id/urlEdt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/urlEdt"
        app:layout_constraintTop_toTopOf="@id/urlEdt" />

    <Button
        android:id="@+id/openPdfBtn"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:background="@color/yc_blue"
        android:text="打开本地pdf"
        android:textColor="@color/white"
        app:backgroundTint="@color/yc_blue"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@id/openXlsBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/urlEdt" />


    <Button
        android:id="@+id/openXlsBtn"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:background="@color/yc_blue"
        android:text="打开本地xls"
        android:textColor="@color/white"
        app:backgroundTint="@color/yc_blue"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@id/openPptBtn"
        app:layout_constraintStart_toEndOf="@id/openPdfBtn"
        app:layout_constraintTop_toTopOf="@id/openPdfBtn" />

    <Button
        android:id="@+id/openPptBtn"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:background="@color/yc_blue"
        android:text="打开本地ppt"
        android:textColor="@color/white"
        app:backgroundTint="@color/yc_blue"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/openXlsBtn"
        app:layout_constraintTop_toTopOf="@id/openPdfBtn" />


    <Button
        android:id="@+id/openDocxBtn"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:background="@color/yc_blue"
        android:text="打开本地Docx"
        android:textColor="@color/white"
        app:backgroundTint="@color/yc_blue"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@id/openPdfBtn"
        app:layout_constraintTop_toBottomOf="@id/openPdfBtn" />


    <Button
        android:id="@+id/openTxtBtn"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:background="@color/yc_blue"
        android:text="打开本地Txt"
        android:textColor="@color/white"
        app:backgroundTint="@color/yc_blue"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@id/openPptBtn"
        app:layout_constraintStart_toEndOf="@id/openPdfBtn"
        app:layout_constraintTop_toTopOf="@id/openDocxBtn" />

    <Button
        android:id="@+id/openMdBtn"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:background="@color/yc_blue"
        android:text="打开本地Md"
        android:textColor="@color/white"
        app:backgroundTint="@color/yc_blue"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/openXlsBtn"
        app:layout_constraintTop_toTopOf="@id/openDocxBtn" />

    <Button
        android:id="@+id/openLinePdfBtn"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:background="@color/yc_blue"
        android:text="打开在线Pdf"
        android:textColor="@color/white"
        app:backgroundTint="@color/yc_blue"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="@id/openDocxBtn"
        app:layout_constraintTop_toBottomOf="@id/openDocxBtn" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/openLinePdfBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>